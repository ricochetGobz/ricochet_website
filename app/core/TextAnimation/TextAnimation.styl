
.TextAnimation
  display: flex
  flex-direction: row
  flex-wrap: wrap

  &-letter
    display: block
    transition: 0.4s
    backface-visibility: hidden

    // ANIMATIONS
    // OPACITY
    &_opacity
      opacity: 0

      &.TextAnimation-visible
        opacity: 1

    // TRANSALTION
    letterRotation = 200deg
    letterTranslation = 80px

    &_top
      transform: rotateX(letterRotation) translateY(letterTranslation)
    &_bottom
      transform: rotateX(-(letterRotation)) translateY(-(letterTranslation))
    &_left
      transform: rotateY(letterRotation) translateX(letterTranslation)
    &_right
      transform: rotateY(letterRotation) translateX(letterTranslation)

    &_top, &_bottom, &_left, &_right
      &.TextAnimation-visible
        transform: translateX(0) translateY(0) rotateX(0deg) rotateY(0deg)
