@import './variables';

@font-face {
  font-family: 'circularstd';
  src: url(fontPath + 'circular_font/circularstd-book-webfont.woff') format('woff'),
    url(fontPath + 'circular_font/circularstd-book-webfont.ttf') format('truetype');
}

@font-face {
  font-family: 'circularstd-bold';
  src: url(fontPath + 'circular_font/circularstd-bold-webfont.woff') format('woff'),
    url(fontPath + 'circular_font/circularstd-bold-webfont.ttf') format('truetype');
}

@font-face {
  font-family: 'circularstd-medium';
  src: url(fontPath + 'circular_font/circularstd-medium-webfont.woff') format('woff'),
    url(fontPath + 'circular_font/circularstd-medium-webfont.ttf') format('truetype');
}
