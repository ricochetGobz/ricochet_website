/**
*
* app/style/base.styl
* The base of your style
* It can also is your reset
*
**/

@import './variables'
@import './mixins'

w = (160px / 3)
h = (190px / 3)

html, body, #app {
  color: fontColor;
  width: 100%;
  height: 100%;
  font-family: 'circularstd';
  letter-spacing: 3px;
}

html, body, ul, p, h1, h2, h3, button, input {
  margin: 0;
  padding: 0;
}

h1, h2, h3 {
  text-transform: uppercase;
}

h1 {
  font-size: 2.5em;
  letter-spacing: 0.25em;
}
h2 {
  font-size: 1.5em;
  letter-spacing: 0.025em;
}
h3 {
  font-size: 0.9em;
  letter-spacing: 0.3em;
  color: fontColorSecondary;
}

p {
  font-size: 0.7em;
  letter-spacing: 0.15em;
}

strong {
  color: markColor;
  text-transform: capitalize;
}

button, input {
  background-color: transparent;
  border: none;
  font: inherit;
  line-height: normal;
  outline: none;
}


// GENERIC
._content {
  container();
  background-color: backgroundColor;
  box-shadow: 0px 0px 50px 5px #DBD8D8;
}

._wrapper {
  position: relative;
  padding: _margin*3 _margin*4;

  +mobile() {
    padding: _margin;
  }
}

._layout {
  width: 100%;
  height: 100%;
  background-image: url(imgsPath+'pattern.jpg');
  overflow-y: scroll;
  overflow-x: hidden;
  background-size: w*2;
  // animation: backgroundTranslation 5s infinite linear;
}

._frame {
  background-color: backgroundColor;
  box-shadow: 0px 0px 30px 2px shadowColor;

  &_blue {
      box-shadow: 0px 0px 30px 2px shadowColor_blue;
  }

  &_purple {
    box-shadow: 0px 0px 30px 5px shadowColor_purple
  }

  &_dark {
    box-shadow: 0px 0px 50px 5px shadowColor_dark
  }
}

@keyframes backgroundTranslation {
  from {
    background-position: 0 0;
  }
  to {
    background-position: w*2 h*2;
  }
}
