/**
*
* app/style/base.styl
* The base of your style
* It can also is your reset
*
**/

@import './variables'
@import './mixins'

w = (160px / 3)
h = (190px / 3)

html, body, #app {
  color: fontColor;
  width: 100%;
  height: 100%;
  font-family: 'circularstd';
  letter-spacing: 3px;
  overflow: hidden;
}

html, body, ul, p, h1, h2, h3, button, input {
  margin: 0;
  padding: 0;
}

h1, h2, h3 {
  text-transform: uppercase;
}

h1 {
  font-size: 5em;
  letter-spacing: 0.25em;
  font-family: 'circularstd-medium';
}

h2 {
    color: fontColorSecondary;
    font-size: 4.5em;
    letter-spacing: _margin;
    line-height: 0.8em;
    font-family: 'circularstd-medium';
}
h3 {
  font-size: 0.9em;
  letter-spacing: 0.3em;
  color: fontColorSecondary;
}

a {
    text-decoration: none;
    color: fontColor;
}

p {
  letter-spacing: 0.20em;
  line-height: 1.5em;
}

li {
  list-style-type: none;
}

strong {
  color: markColor;
  text-transform: capitalize;
}

button, input {
  background-color: transparent;
  border: none;
  font: inherit;
  line-height: normal;
  outline: none;
}


// GENERIC
._content {
  container();
  background-color: backgroundColor;
  box-shadow: 0px 0px 50px 5px #DBD8D8;
}

._wrapper {
  position: relative;
  padding: (navbarHeight+(_margin*3)) _margin*4;
}

._layout {
  width: 100%;
  height: 100%;
  background-image: url(imgsPath+'pattern.jpg');
  background-size: w*2;
  // animation: backgroundTranslation 5s infinite linear;
}

._frame {
  background-color: backgroundColor;
  box-shadow: 0px 0px 30px 2px shadowColor;

  &_blue {
      box-shadow: 0px 0px 30px 2px shadowColor_blue;
  }

  &_purple {
    box-shadow: 0px 0px 30px 5px shadowColor_purple
  }

  &_dark {
    box-shadow: 0px 0px 50px 5px shadowColor_dark
  }
}

@keyframes backgroundTranslation {
  from {
    background-position: 0 0;
  }
  to {
    background-position: w*2 h*2;
  }
}
