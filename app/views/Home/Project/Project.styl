
@import '../../../style/variables';
@import '../../../style/mixins';

.Project {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;

  &-column {
    position: relative;

    &_left {
      width: 20%;
    }

    &_right {
      width: 70%;
    }
  }


  &-title {

    span:first-child {
      color: fontColor;
      font-size: 0.35em;
      letter-spacing: 5px;
    }
  }

  &-subtitle {
    margin: _margin * 2 0;
    color: fontColorSecondary;
    font-style: italic;
    font-size: 1.5em;
    font-weight: lighter;
  }

  &-paragraph {
    width: 90%;
  }

  &-cube {
    position: relative;
    opacity: 0.9;
  }

  &-notes {
    center();
    width: 450px;
  }
}
