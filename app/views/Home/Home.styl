
@import '../../style/variables';
@import '../../style/mixins';

.Home {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  // overflow-x: auto;
  overflow: hidden;

  &-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  &-content {
    position: absolute;
  }

  &-section {
    position: relative;
    width: 60%;
    max-width: 1366px;
    height: 500px;
    margin: auto;
  }
}
